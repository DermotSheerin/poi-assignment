<div class="ui ten wide column">
    <div class="ui stacked fluid form segment">
        <form action="/dashboard/editIslandDetails/{{islandDetails._id}}" method="POST">
            <h3 class="ui header">Edit Island Details</h3>
            <div class="two fields">
                <div class="field">
                    <label>Region/Category</label>
                    <select class="ui dropdown" name="region"> <!-- NEED TO CHANGE THE BELOW NOT TO HARD CODE THE REGIONS AS IT DOESNT DISPLAY NEW REGIONS ADDED -->
                        <option value="{{islandDetails.region.region}}">Current Region({{islandDetails.region.region}})</option>
                        <option value="North East">North East</option>
                        <option value="East Coast">East Coast</option>
                        <option value="South Coast">South Coast</option>
                        <option value="Mid West">Mid West</option>
                    </select>
                </div>
                <div class="field">
                    <label>Island Name</label>
                    <input placeholder="Last Name" value="{{islandDetails.name}}" type="text" name="name" required>
                </div>
            </div>
            <div class="field">
                <label>Description</label>
                <textarea rows="8" placeholder="Description" name="description"> {{islandDetails.description}} </textarea>
            </div>
            <div class="two fields">
                <div class="field">
                    <label>Latitude</label>
                    <input placeholder="Latitude" value="{{islandDetails.latitude}}" type="number"  step="any" name="latitude" required>
                </div>
                <div class="field">
                    <label>Longitude</label>
                    <input placeholder="Longitude" value="{{islandDetails.longitude}}" type="number"  step="any" name="longitude" required>
                </div>
            </div>
            <button class="ui blue submit button">Save</button>
            <a href="/dashboard/listIslands">
                <button class="ui red submit button">Return to Dashboard</button>
            </a>
        </form>
    </div>
</div>
