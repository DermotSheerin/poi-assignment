<div>
    <article class="four wide column">
        <table class="ui striped celled table segment">
            <thead>
            <tr>
                <th class="one wide">Region/Category</th>
                <th class="two wide"> Image </th>
                <th class="one wide">Island Name</th>
                <th>Description</th>
                <th class="one wide"> User </th>
                <th class="one wide"> Edit Details </th>
                <th class="one wide"> Delete Island </th>
            </tr>
            </thead>
            <tbody>
                {{#each userIslands}}
                <tr>
                    <td> {{region.region}} </td>
                    <td> {{filename}} </td>
                    <td> {{name}} </td>
                    <td> {{description}} </td>
                    <td> {{user.firstName}} {{user.lastName}} </td>
                    <td> <a href="/dashboard/{{../userId}}/showIslandDetails/{{_id}}" class="ui icon button">
                        <i class="edit icon"></i> </a>
                    </td>
                    <td> <a href="/dashboard/{{../userId}}/deleteIsland/{{_id}}" class="ui icon button">
                        <i class="icon trash"></i> </a>
                    </td>
                </tr>
            {{/each}}
            </tbody>
        </table>
    </article>
</div>

